doctype 5
html(lang="en")
  head
    title= getPreparedTitle()
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="/css/style.css")

  body
    .container
      h1
        a(href="/")
          span.header-light joe
          span.header-medium .xoxo
          span.header-dark moon
          span.header-light .com
      #links.navbar
        ul.nav.navbar-nav
          each item in ['prose', 'code', 'about']
            li
              if document.name === item + '.html'
                a.active(href='/' + item)= item
              else
                a(href='/' + item)= item
      != content
    footer
      .container!=site.copyright

